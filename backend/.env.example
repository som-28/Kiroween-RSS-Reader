PORT=5000
NODE_ENV=development

# Database
DATABASE_PATH=./data/haunted-rss.db

# AI Service Configuration
# Google Gemini API Key (FREE TIER AVAILABLE!)
# Get your free API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative AI Providers (optional - not needed if using Gemini)
# OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_key_here
# OLLAMA_BASE_URL=http://localhost:11434

# AI Provider Order (comma-separated, first available will be used)
# Options: gemini, openai, anthropic, ollama, fallback
# Gemini is now the default (has free tier!)
AI_PROVIDER_ORDER=gemini,fallback

# Text-to-Speech: Using Web Speech API (built-in browser, no API key needed!)
# ElevenLabs is optional and not required
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Feed Update Settings
FEED_UPDATE_INTERVAL_MINUTES=30
